/* pages/vote/index.wxss */

.header {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-top: 37rpx;
  z-index: -1;
  /* align-items: flex-start; *//* background: #E5E5E5; */
}

.setting-icon {
  width: 20rpx;
  height: 20rpx;
  display: flex;
  border-radius: 50%;
  /* background-color: #cc3131; */
  box-shadow: 0px 2px 9px rgba(115, 115, 115, 0.13);
}

.rule {
  display: flex;
}

.divLine {
  background: #e5e5e5;
  /* width: 50%; */
  height: 2rpx;
  margin-top: 50rpx;
  margin-right: 15rpx;
  margin-left: 15rpx;
}

.body {
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
  padding-top: 45rpx;
  padding-left: 26rpx;
  z-index: 1;
}

.vote {
  display: flex;
  height: 100rpx;
  width: 100%;
  padding-left: 41rpx;
  margin-left: 10rpx;
  /* margin-right: 90rpx; */
  justify-content: start;
  align-items: center;
  background: #e2e2e2;
  color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  border-radius: 17.35rpx;
}

.item {
  padding-right: 90rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  
}
.select{
  background:#FFFFFF;
  color: #000000;
  /* border: 0.5rpx solid #000000; */
  box-shadow: 4px 4px 4px 0 rgba(155,155,155,.13);
}

.row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.circle {
  border-radius: 100%;
  height: 46rpx;
  width: 46rpx;
  display: flex;
  border: 1rpx solid #c9c9c9;
  /* border-style: ; */
}


