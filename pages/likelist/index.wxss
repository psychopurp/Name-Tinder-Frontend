.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  box-shadow: 0px 1px 8px 0px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-right: 40rpx;
}
.top-avatar{
  margin-top: 50rpx;
}









.attender-list {
  /* padding: 10rpx 0; */
  padding-top: 40rpx;
  display: flex;
  justify-content: center;
  width: 100%;
}

.attender-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0px 1px 8px 0px rgba(0, 0, 0, .1);
  opacity: 0.8;
  background: #FFFFFF;
}

.attender-avatar + .attender-avatar {
  margin-left: 20rpx;
}

.no-like {
  font-weight: normal;
  font-size: 36rpx;
  color: #9B9B9B;
  letter-spacing: 0.68rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-weight: bolder;
  white-space : nowrap;
}

.like-list {
  padding-top: 52rpx;
  padding-bottom: 50rpx;
}

.like {
  margin: 0 auto;
  width: 650rpx;
  line-height: 100rpx;
  border-radius: 17.35rpx;
  text-align: left;
  padding-left: 40rpx;
}

.like + .like {
  margin-top: 20rpx;
}