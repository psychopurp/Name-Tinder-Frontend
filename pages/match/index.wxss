.list {
  /* padding-top: 40rpx; */
}

.list__title {
  padding: 40rpx 42rpx 0 60rpx;
  text-align: left;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  width: 100%;
}

.list__setting {
  display: inline-block;
  float: right;
}

.setting-icon {
  width: 45rpx;
  height: 45rpx;
  display: block;
}

.list-content {
  margin-top: 128rpx;
}

.list__item {
  display: flex;
  align-items: center;
  margin: 0 auto;
  width: calc(100% - 30rpx);
  padding: 52rpx 36rpx 59rpx;
  /* height: 182rpx; */
  border-bottom: 1rpx solid #E5E5E5;
  text-align: left;
  font-weight: normal;
}

.list__avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  /* box-shadow: 0 2px 4px 0 rgba(0,0,0,0.50); */
  box-shadow: 0px 1px 8px 0px rgba(0, 0, 0, .1);
  margin-right: 40rpx;
}

.no-match {
  position: relative;
  width: 508rpx;
  height: 700rpx;
  margin: 173rpx auto 0;
  background-color: #fffabf;
  border-radius: 17.35rpx;
  padding-top:150rpx;
  box-shadow: 0px 2px 4px 0 rgba(155,155,155,.13);
  overflow: hidden;
}

.no-match .text {
  font-weight: bolder;
  font-size: 36rpx;
  color: #000000;
  line-height: 48rpx;
  height: 48rpx;
}

.no-match .share {
  position: absolute;
  width: 100%;
  line-height: 70rpx;
  font-weight: bold;
  background: #fff;
  bottom: 0;
  left: 0;
  border-radius: 0;
}

button {
  padding: 0;
  -webkit-tap-highlight-color:transparent;
  overflow: auto;
}

button::after {
  border: none;
}