  padding-bottom: 30rpx;
border-bottom: 1rpx solid #E5E5E5;
  /* margin: 0 auto;  */
}

.list {
  position: relative;
  height: 180rpx;
  /* margin: 20rpx; */
  border-radius: 10rpx;
  line-height: 180rpx;
  overflow: hidden;
  /* background: #9b9b9b; */
  background: #e64340
}

/*删除外层包裹视图*/
.list_del {
  position: absolute;
  top: 0;
}

.list_del.txt {
  position: relative;
  background-color: #fff;
  width: 100%;
  z-index: 5;
  /* padding: 0 10rpx; */
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list_del.del {
  background-color: #e64340;
  width: 190rpx;
  text-align: center;
  z-index: 4;
  right: 0;
  color: #fff;
}

