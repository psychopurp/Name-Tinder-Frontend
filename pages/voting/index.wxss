/* pages/voting/index.wxss */

.header{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.column{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.row{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.setting-icon {
  width: 20rpx;
  height: 20rpx;
  display: flex;
  border-radius: 50%;
  /* background-color: #cc3131; */
  box-shadow: 0px 2px 9px rgba(115, 115, 115, 0.13);
}

.body{
  
}
.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  box-shadow: 0px 1px 8px 0px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-left: 37rpx;
  /* margin-right: 40rpx; */
}
.item {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 100rpx;
}
.card{
  background:#FFFFFF;
  color: #000000;
  /* border: 0.5rpx solid #000000; */
  box-shadow: -4px 0px 10px 3px rgba(155,155,155,.13);
  display: flex;
  height: 100%;
  width: 100%;
  padding-left: 41rpx;
  margin-left: 10rpx;
  margin-right: 21rpx;
  justify-content: flex-start;
  align-items: center;
  border-radius: 17.35rpx;
}

.like-icon{
  width: 44rpx;
  height: 40rpx;
}
.name-avatar{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: nowrap;
  overflow: hidden;
  flex-shrink: 1;
  flex-grow: 0;
  /* width: 540rpx; */
  margin-left: 50rpx;
  margin-bottom: 10rpx;
  /* background: #FFF000; */

}
.avatars{
  display: inline-block;
  margin-right: 20rpx;
  flex-shrink: 1;
  flex-grow: 0;
  width: 50rpx;
  height: 50rpx;
    border-radius: 50%;
  box-shadow: 0px 1px 8px 0px rgba(0, 0, 0, 0.1);
}